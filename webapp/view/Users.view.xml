<mvc:View xmlns:unified="sap.ui.unified"
  controllerName="project1.controller.Users"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <VBox id="mainVBox" class="mainVBox">
    <unified:FileUploader id="fileUploader" name="file" placeholder="Upload CSV File" change="onFileUpload" class="fileUploader"/>
    
    <HBox id="buttonHBox" class="buttonHBox">
      <Button id="createButton" text="Create" press="onCreate" type="Accept"/>
      <Button id="updateButton" text="Update" press="onUpdate" type="Emphasized"/>
      <Button id="deleteButton" text="Delete" press="onDelete" type="Reject"/>
    </HBox>

      <Table id="responseTable" items="{userModel>/userreturn}" >
        <columns>
          <Column id="_IDGenColumn1">
            <Label id="_IDGenLabel1" text="User ID" />
          </Column>
          <Column id="_IDGenColumn2">
            <Label id="_IDGenLabel2" text="First Name" />
          </Column>
          <Column id="_IDGenColumn3">
            <Label id="_IDGenLabel3" text="Last Name" />
          </Column>
          <Column id="_IDGenColumn4">
            <Label id="_IDGenLabel4" text="Email" />
          </Column>
          <Column id="_IDGenColumn5">
            <Label id="_IDGenLabel5" text="Password" />
          </Column>
          <Column id="_IDGenColumn6">
            <Label id="_IDGenLabel6" text="Language" />
          </Column>
          <Column id="_IDGenColumn7">
            <Label id="_IDGenLabel7" text="Date From" />
          </Column>
          <Column id="_IDGenColumn8">
            <Label id="_IDGenLabel8" text="Date To" />
          </Column>
          <Column id="_IDGenColumn9">
            <Label id="_IDGenLabel9" text="User Group" />
          </Column>
          <Column id="_IDGenColumn10">
            <Label id="_IDGenLabel10" text="Output Device" />
          </Column>
          <Column id="_IDGenColumn11">
            <Label id="_IDGenLabel11" text="Communication Type" />
          </Column>
          <Column id="_IDGenColumn12">
            <Label id="_IDGenLabel12" text="Decimal" />
          </Column>
          <Column id="_IDGenColumn13">
            <Label id="_IDGenLabel13" text="Company" />
          </Column>
          <Column id="_IDGenColumn14">
            <Label id="_IDGenLabel14" text="Message" />
          </Column>
        </columns>
        <items>
          <ColumnListItem id="_IDGenColumnListItem1">
            <cells>
              <Text id="_IDGenText1" text="{userModel>userid}" />
              <Text id="_IDGenText2" text="{userModel>firstname}" />
              <Text id="_IDGenText3" text="{userModel>lastname}" />
              <Text id="_IDGenText4" text="{userModel>email}" />
              <Text id="_IDGenText5" text="{userModel>password}" />
              <Text id="_IDGenText6" text="{userModel>langup}" />
              <Text id="_IDGenText7" text="{userModel>datefrom}" />
              <Text id="_IDGenText8" text="{userModel>dateto}" />
              <Text id="_IDGenText9" text="{userModel>usergrp}" />
              <Text id="_IDGenText10" text="{userModel>spld}" />
              <Text id="_IDGenText11" text="{userModel>commtype}" />
              <Text id="_IDGenText12" text="{userModel>dcpfm}" />
              <Text id="_IDGenText13" text="{userModel>company}" />
              <Text id="_IDGenText14" text="{userModel>message}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
  </VBox>
</mvc:View>
